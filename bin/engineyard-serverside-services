#!/bin/sh
set -e
: ${EY_DEPLOY_APP:?"App name required."}
: ${EY_SERVICES_COMMAND:="/usr/local/ey_resin/ruby/bin/ey-services-setup"}

if which "${EY_SERVICES_COMMAND}" >/dev/null 2>&1; then
  if ! ${EY_SERVICES_COMMAND} "$EY_DEPLOY_APP"; then
    echo "!> WARNING: External services configuration not updated. Using previous version." >&2
    echo "!> Deploy again if your services configuration appears incomplete or out of date." >&2
  fi
else
  echo "Could not setup services. Upgrade your environment to load service configuration." >&2
fi
